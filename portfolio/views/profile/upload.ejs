                         <div class="sny-icon-box">

                              <h4>Please upload the Photo<br />and Put the URL</h4>
                               <form action="/upload" method="post">
                                     <div class="icon-user">
                                     <label><span>URL</span></label>
                                        <input required autocomplete="off" name="uploadURL"/>
                                        <br /><br />
                                   </div>
                                   <li class='tab' id="tab-about" style="position:relative;left:50px">
                                      <button class="button button-block"/>UPLOAD</button>
                                   </li>
                              </form>
                            <div class="sny-icon-content">
                            </div>
                         </div>
                       </div>
                       <div class="break"></div>
                       
                    </section>
                </div>
              <!-- End Contact Data -->
            </div>
        </div>
        <!-- End Tab Container -->
        <footer>
